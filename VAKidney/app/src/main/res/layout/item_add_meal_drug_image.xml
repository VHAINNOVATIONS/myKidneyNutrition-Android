<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topcoder.vakidney.adapter.MealDrugImageAdapter.AddMealDrugImageViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/addPhotoBtn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_white"
        android:gravity="center"
        android:onClick="@{viewModel::onItemClick}">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/app_standard_padding"
            android:tint="@color/colorLightDarkGray"
            app:srcCompat="@drawable/ic_addphotos" />

    </LinearLayout>
</layout>